<%- include('../partials/header') %>
<section id="show-page">
<div>Airline</div>
<div><%=flight.airline %></div>
<div>Airport</div>
<div><%=flight.airport %></div>
<div>Flight Number</div>
<div><%=flight.flightNo %></div>
<div>Departure</div>
<div><%=flight.departs %></div>
<% if (flight.destinations.length) { %>
<div>Arrivals</div>
<% flight.destinations.forEach(function(dest){ %>
    <div><%=dest.airport %></div>
    <div><%=dest.arrival %></div>   
    <% }); %>
<% } else { %>
    <h5>No Arrivals Yet</h5>
<% } %>

<div>Tickets</div>
<div>Seat</div>
<div><%=flight.seat %></div>
<div>Price</div>
<div><%=flight.price %></div>

<br><br><h2>New Ticket</h2>
<a href="/flights/<%=flight._id %>/tickets/new" class="button">Add New Ticket</a>
<br><br><h2>Destinations</h2>
<form id="add-review-form" method="Post" action="/flights/<%=flight._id %>/destinations">
   <label>Airports</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN" selected>SAN</option>
    </select>
    <input type="datetime-local" name="arrival" required>
    <input type="submit" value="Add Destination">
</form>
<%- include('../partials/footer') %>